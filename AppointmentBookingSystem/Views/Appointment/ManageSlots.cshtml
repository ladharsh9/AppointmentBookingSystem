@{
}
@model List<AppointmentBookingSystem.Models.ManageDTO>


          


<div style="display:flex; justify-content: space-between;">
    <h2>Manage Slots</h2> <div>
        <button class="btn-primary">
            <a class="nav-link text-light" asp-controller="Appointment" asp-action="AddSlot">Add Slot</a>
        </button>
        <button class="btn-danger"><a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Logout</a></button>
        </div>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>Doctor Name</th>
           
            <th>Start Time</th>
            <th>End Time</th>
            <th>User Name</th>
            <th>Booked</th>
          
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slot in Model)
        {
            <tr>
                <td>@slot.DoctorName</td>
              
                <td>@slot.StartTime</td>
                <td>@slot.EndTime</td>
                <td>@(slot.UserName ?? "-")</td>
                @* <td>@slot.IsBooked</td>*@
                <td>@(slot.IsBooked ? "Yes" : "No")</td>
               
                <td>
                    <a asp-action="EditSlot" asp-route-id="@slot.Id" class="btn btn-warning text-dark">Edit</a>
                    <a asp-action="DeleteSlot" asp-route-id="@slot.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
