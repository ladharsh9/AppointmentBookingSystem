@{
}

@model AppointmentBookingSystem.Models.Slot
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100px;">
    <div class="col-md-4">
<h2>Add New Slot</h2>

<form asp-action="AddSlot" method="post">
    <div class="form-group md-4">
        <label>Start Time</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group md-4">
        <label>End Time</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
    </div><br/>
    <button type="submit" class="btn btn-primary">Add Slot</button>
            <button type="reset" class="btn btn-secondary"> <a asp-controller="Appointment" asp-action="ManageSlots" style="color:white; text-decoration:none;">Cancel</a></button>
</form>
</div></div>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-2">@ViewBag.Message</div>
}
