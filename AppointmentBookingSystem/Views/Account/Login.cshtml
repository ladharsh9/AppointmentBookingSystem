@{
}

@model AppointmentBookingSystem.Models.User
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100px;">
    <div class="col-md-4">
        <h2 class="text-center">Login</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }
@using (Html.BeginForm())
{
    <div class="form-group mb-3">
        <label for="UserName">Username</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        <label for="Password">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Login</button>
}
        <p class="mt-3 text-center">Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}
        
</div>
</div>